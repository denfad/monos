<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ru.denfad.rover.map.Grid
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9C2804">

    </ru.denfad.rover.map.Grid>


    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <Button
                    android:text="верх"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/up" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="влево"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left" />

            <Button
                    android:text="Вправо"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <Button
                    android:text="Вниз"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom" />
        </TableRow>

    </TableLayout>

    <Button
            android:text="Режим разработки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codding"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"/>

    <Button
            android:text="Сгенерировать заново"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regenerate"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/codding"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/regenerate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>


</RelativeLayout>
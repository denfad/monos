<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ru.denfad.rover.map.Grid
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mars">

    </ru.denfad.rover.map.Grid>


    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp">

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            <ImageButton
                    android:src="@drawable/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:id="@+id/up"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:padding="5dp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageButton
                    android:src="@drawable/left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:padding="5dp"/>

            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"/>

            <ImageButton
                    android:src="@drawable/ic_baseline_rotate_right_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:padding="5dp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <ImageButton
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:padding="5dp"/>
        </TableRow>

    </TableLayout>

    <ImageButton
            android:src="@drawable/programming"
            android:text="Режим разработки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codding"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/regenerate"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectangle"
            android:padding="5dp"/>

    <ImageButton
            android:src="@drawable/regenerate"
            android:text="Сгенерировать заново"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regenerate"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/back"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectangle"
            android:padding="5dp"/>

    <ImageButton
            android:src="@drawable/exit"
            android:text="Выйти"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle"
            android:padding="5dp"/>

    <ru.denfad.rover.ui.NoDefaultSpinner
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/spinner"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/back"
            android:background="@drawable/title"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />

</RelativeLayout>